<% provide(:title, @user.name) %>
<div class="container-narrow">
	<h1> <%= gravatar_for @user %>
	<%= @user.name %> </h1>
	<div class="col-lg-8">
		<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end %>

	</div>
</div>

