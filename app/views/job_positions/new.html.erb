<div class="container-narrow">
		<% provide(:title, 'Create Job') %> <h1>Create a new job:</h1>
		<%= bootstrap_form_for(@job) do |f| %>
		<%= f.alert_message "Please fix the errors below." %>
		<%= f.error_summary %>
		<%= f.text_field :title%>
		<%= f.text_field :dept%>
		<%= f.text_field :opennum%>
		<%= f.text_area  :description%>
		<%= f.text_area  :requirement%>
		<%= f.submit "create new job", class: "btn btn-large btn-primary"%>
		<% end %>

</div>
